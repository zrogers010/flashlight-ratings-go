FROM golang:1.22-alpine AS build

WORKDIR /src

COPY go.mod go.sum ./
RUN go mod download

COPY . .

ARG TARGET=api
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /out/app ./cmd/${TARGET}

FROM alpine:3.20

RUN adduser -D -u 10001 appuser
WORKDIR /app

COPY --from=build /out/app /app/app

USER appuser
ENTRYPOINT ["/app/app"]
